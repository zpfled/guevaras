<section class="content push-down">
    <h1>Menu</h1>

    <ul class="menu nav nav-tabs">
      <li class="h2 active">
        <a href="#lunch" data-toggle="tab">Lunch</a>
      </li>
      <li class="h2">
        <a href="#dinner" data-toggle="tab">Dinner</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade in active" id="lunch">
        <% @menu_items.each do |item| %>
          <% if item.menu == 'lunch' %>
            <% if item.category == 'starters' %>
              <article>
                <!-- I need to fix it so that the h3 doesn't repeat with every article. -->
                <h3>
                  <a data-toggle="collapse" data-target="#<%= item.category %>">
                    <%= item.category %>
                  </a>
                </h3>
                <dl id="<%= item.category %>" class="menu collapse in">
                <dt class="item-name">
                  <%= item.name %>
                  <span class="item-price">
                    <%= item.price %>
                  </span>
                </dt>
                <dd class="item-description">
                  <%= item.description %>
                </dd>
              </article>
            <% end %>
          <% end %>
        <% end %>
        <!-- <h3><a data-toggle="collapse" data-target="#starters">Starters</a></h3> -->
        <dl id="starters" class="menu collapse in">
          <dt>Flat Bread <span>7</span></dt>
          <dd>Flat bread drizzled with infused garlic and herb olive oil, baked with artichokes, sundry tomatoes, calamata olives, roasted red pepper, fresh mozzarella, fresh basil and pecorino romano</dd>
          <dt>Bruschetta <span>6</span></dt>
          <dd>Fresh tomatoes, garlic, and herbs on toasted baguette with a touch of balsamic reduction</dd>
          <dt>Pomme Frites <span>6</span></dt>
          <dd>Hand cut fries tossed with grated pecorino, parsley, and lemon zest served with a garlic aioli</dd>
        </dl>
      </div>
      <div class="tab-pane fade" id="dinner">
        This is dinner
      </div>
    </div>

    <div id="accordion">
      <div class="panel">
        <div>
          <h3>
            <a data-toggle="collapse" data-parent="#accordion" href="#wine-list">
              Wine List
            </a>
          </h3>
        </div>
        <div id="wine-list" class="menu panel-collapse collapse">
          <div class="panel-body">
