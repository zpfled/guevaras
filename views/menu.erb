    <!-- Menu accordion for -xs and -sm screens -->

    <div id="accordion">
      <div class="menu nav-tabs visible-xs visible-sm">
        <div>
          <% @menu.each do |menu| %>
          <h3>
            <a data-toggle="tab" data-parent="#accordion" href="#<%= menu.split(' ').join('-') %>">
              <%= menu %>
            </a>
          </h3>
          <% end %>
        </div>
    </div>

    <!-- Menu tabs for -md and -lg screens -->

    <ul class="menu nav nav-tabs visible-md visible-lg">
      <% @menu.each do |menu| %>
        <li class="h2">
          <a href="#<%= menu.split(' ').join('-') %>" data-toggle="tab"><%= menu %></a>
