<body>
    
<!-- Skrollr-body div for parallax scrolling on mobile platforms -->

    <!-- The data-end="height: 160%" is a janky hack that temporarily solves our footer problem. -->
    <div id="skrollr-body" class="skrollr-body" data-start="height: 100%" data-end="height: 160%">
    
<!-- Index.erb -->
        
    <%= yield %>

<!-- Close skrollr-body -->
    
    </div> 
        
        
<!-- Full-Screen Messages -->

    <div class="bcg error-msg container">
        <h3 id="error-msg" class="alert alert-warning"></h3>
    </div>

    <div class="bcg add-msg container">
        <h3 id="add-msg" class="alert alert-success"></h3>
    </div>
    
    <div class="bcg menu-msg container">
        <h3 id="menu-msg" class="alert alert-info"></h3>
    </div>

    <div class="bcg delete-confirmation container">
        <div class="alert alert-info">
            <h3>Are you sure you want to delete this?</h3>
            <button class="btn btn-big btn-danger col-xs-12 col-md-4 col-md-offset-4" id="no">no</button>
            <button class="btn btn-big btn-primary col-xs-12 col-md-4 col-md-offset-4" id="yes">yes</button>
        </div>
    </div>

    <div class="delete-msg container">
        <h3 id="delete-msg" class="alert alert-success"></h3>
    </div>

<!-- Bootstrap core JavaScript -------------------------------------------------------------------------------- -->
