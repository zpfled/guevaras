<body>

<!-- index.erb || admin.erb-->
  
    <%= yield %>
        
        
<!-- Full-Screen Messages -->

    <div class="msg error-msg container">
        <h3 id="error-msg" class="alert alert-warning"></h3>
    </div>

    <div class="msg add-msg container">
        <h3 id="add-msg" class="alert alert-success"></h3>
    </div>
    
    <div class="msg menu-msg container">
        <h3 id="menu-msg" class="alert alert-info"></h3>
    </div>

    <div class="msg delete-confirmation">
        <div class="alert alert-modal col-xs-12 col-md-4">
            <h3>Are you sure you want to delete this?</h3>
            <button class="btn btn-lg btn-danger col-xs-12" id="no">no</button>
            <button class="btn btn-lg btn-primary col-xs-12" id="yes">yes</button>
        </div>
    </div>

    <div class="delete-msg container">
        <h3 id="delete-msg" class="alert alert-success"></h3>
    </div>

<!-- JavaScript -------------------------------------------------------------------------------- -->
    <!-- Placed at the end of the document so the pages load faster -->
